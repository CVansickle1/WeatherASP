@model WeatherASP.Models.CityChecker

@{
    ViewData["Title"] = "SearchCity";
}

<div class="container">

    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input type = "text" id ="CityName" asp-for="CityName" name ="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="CitySearch" asp-action="CityChecker" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>

