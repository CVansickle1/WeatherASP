@model WeatherASP.Models.ResultCityModel

@{
    ViewData["Title"] = "Weather Results for " + @Model.Name;
}
@{
    ViewData["Icon"] = Model.FavIcon;
}

<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <h2>Forecast for the selected city</h2>

            <label asp-for="Name"></label>
            <span>@Model.Name</span>
            <br />

            <label asp-for="Temp"></label>
            <span>@Model.Temp°F</span>
            <br />

            <label asp-for="Humidity"></label>
            <span>@Model.Humidity%</span>
            <br />

            <label asp-for="Pressure"></label>
            <span>@Model.Pressure Hpa</span>
            <br />

            <label asp-for="Wind"></label>
            <span>@Model.Wind mph</span>
            <br />

            <label asp-for="Weather"></label>
            <span>@Model.Weather</span>
            <div><img src="@Model.IconImage"/></div>
            

        </div>

    </div>

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <form method="get">
                <button asp-controller="CitySearch" asp-action="CityChecker" class="btn btn-primary">Return</button>
            </form>

        </div>

    </div>

    

</div>